<h2>Available drones</h2>
{{#each drones}}
  <div>
    <p>{{this.name}}</p>
    <p>{{this.propellers}}</p>
    <p>{{this.maxSpeed}}</p>
    <a href="/drones/{{this._id}}/update-form">Edit Drone</a>
    <form action="/drones/{{this._id}}/delete" method="POST">
      <button type="submit">Delete</button>
    </form>
  </div>
{{/each}}